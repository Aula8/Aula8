<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pregunta"
    app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/imagenUsuario"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nombreUsuario"
                    android:text="Nombre"
                    android:textColor="#000"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imagenUsuario"
                    android:textSize="23sp"
                    />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="170px"
                    android:id="@+id/scrollPregunta"
                    android:scrollbars="vertical"
                    android:layout_below="@+id/nombreUsuario"
                    android:layout_above="@+id/expandir"
                    android:layout_toRightOf="@+id/imagenUsuario"
                    >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/preguntaUsuario"
                            android:text="pregunta"
                            android:textColor="#000"
                            android:maxLines="3"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imagenUsuario"
                            android:layout_below="@+id/nombreUsuario"
                            android:layout_above="@+id/botonRespuesta" />
                </ScrollView>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Pregunta"
                    android:id="@+id/expandir"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/nombreUsuario" />
        </RelativeLayout>
</android.support.v7.widget.CardView>